<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Edit <%= campground.name%>Campground</h1>    
      <div style="width:30%; margin :25px auto;">
          
        <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
             </div>
             
             <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
             </div>
             
             <div class="form-group">
                <textarea class="form-control" name="campground[description]"><%= campground.description %></textarea>
             </div>
             <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
        </form> 
          <a href="/campgrounds"> Go to Campgrounds</a>
    </div>  
  
    
</div>




<% include ../partials/footer %>